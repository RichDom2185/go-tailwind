{
  "include": ["**/*.ts", "main."],
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      /* Swap V8-compatible alternatives to the Node.js APIs */
      "fs": ["modules/fs"],
      "os": ["modules/os"],
      "fast-glob": ["modules/fast-glob"],
      "glob-parent": ["modules/glob-parent"],
      "resolve": ["modules/resolve"],
      "crypto": ["modules/crypto"],
      "picocolors": ["modules/picocolors"],
      "path": ["node_modules/path-browserify"],
      "url": ["node_modules/url"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
